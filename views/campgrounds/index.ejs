<% layout('layout/boilerplate') %>
    <div class="cluster-map" id="map"></div>
    <h1 class="mt-3 mb-0">All Campgrounds</h1>
    <div class="mb-2" >
        <a href="/campgrounds/new" id="map-cluster" class="newCamp">Add new campground</a>
    </div>
    <ul>
        <% for (let campground of campgrounds) { %>
            <!-- <li><a href="/campgrounds/<%= campground._id %>"><%= campground.title %></a></li> -->
            <div class="card rounded mb-1">
                <div class="row">
                    <div class="col-md-4">
                        <% if(campground.images.length) { %>
                            <img class="img-fluid" src="<%=campground.images[0].url; %>" alt="">
                        <% } else { %>
                            <img src="https://media.istockphoto.com/id/2161795233/photo/little-river-synchronous-fireflies-elkmont-campgrounds-great-smokey-mountains.jpg?s=612x612&w=is&k=20&c=Q2JSrRcBJbDma_2BLjEBMrGBqxG5GtsR8HEOFg8JmcM=" alt="" srcset="">
                        <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%=campground.title%></h5>
                            <p class="card-text"><%=campground.description.substring(0, 110)%>...</p>
                            <p class="card-text">
                                <small class="text-muted"><%=campground.location%></small>
                            </p>
                            <a class="btn btn-info" href="/campgrounds/<%=campground._id%>">View <%=campground.title%></a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </ul>

