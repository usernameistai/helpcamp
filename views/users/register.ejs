<% layout('layout/boilerplate') %>

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="col">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://media.istockphoto.com/id/2161790231/photo/old-mill-music-and-rv-park-campgrounds-tennessee.webp?a=1&b=1&s=612x612&w=0&k=20&c=YOKniEMB4SepWqcxVXZzn3VjhsBPNeeM2UuHjYtSQJs="
                class="card-img-top">
                <div class="card-body">
                    <h3 class="card-title">Sign up to HelpCamp</h3>
                    <form action="/register" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username: </label>
                            <input class="form-control" type="text" id="username" name="username" placeholder="Please add a Username" required autofocus>
                            <div class="valid-feedback">
                                Looking good! Nice username!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="email">Email: </label>
                            <input class="form-control" type="email" id="email" name="email" placeholder="Please add an Email address" required>
                            <div class="valid-feedback">
                                Looking good! Nice email!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password: </label>
                            <input class="form-control" type="password" id="password" name="password" placeholder="Please add a password" required>
                            <div class="valid-feedback">
                                Looking good! Nice password!
                            </div>
                        </div>
                        <div class="d-grid gap-2 mx-auto">
                            <button class="btn btn-success">Sign Up</button> 
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>






    